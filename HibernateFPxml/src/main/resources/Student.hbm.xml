<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="beans.Student" table="std_Table">
        <id name="id" column="std_id"/>  <!-- primary key  -->
        <property name="name" column="std_name"/>
        <property name="rollno" column="std_roll"/>
        <property name="email" column="std_email"/>
        <property name="gender" column="std_gender"/>
        <property name="city" column="std_city"/>
    </class>
</hibernate-mapping>